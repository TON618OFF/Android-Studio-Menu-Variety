<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nav_drawer"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="300dp"
    android:layout_height="match_parent">

    <!-- Шапка -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:gravity="bottom"
        android:padding="16dp"
        android:background="@drawable/gojo">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TON618OFF"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="right"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LVL. INFINITE"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginBottom="30dp"
            android:gravity="right"/>
    </LinearLayout>

    <!-- Новый контейнер с отступом и центрированием -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"> <!-- Центрирование всего контейнера по горизонтали -->

        <!-- Первый фрагмент -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/one_frag"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"> <!-- Отступ сверху -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Первый фрагмент"
                android:textSize="20sp"
                android:drawablePadding="10dp"/>
        </LinearLayout>

        <!-- Второй фрагмент -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/two_frag"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"> <!-- Отступ сверху -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Второй фрагмент"
                android:textSize="20sp"
                android:drawablePadding="10dp"/>
        </LinearLayout>

        <!-- Третий фрагмент -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/three_frag"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"> <!-- Отступ сверху -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Третий фрагмент"
                android:textSize="20sp"
                android:drawablePadding="10dp"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
